<?xml version="1.0" encoding="UTF-8" ?> 
<!DOCTYPE configuration PUBLIC "-//ibatis.apache.org//DTD Config 3.0//EN" "http://ibatis.apache.org/dtd/ibatis-3-config.dtd">

<configuration>
	<settings>
		<!-- 全局映射器启用缓存 -->
		<setting name="cacheEnabled" value="true" />
		<!-- 对于未知的SQL查询，允许返回不同的结果集以达到通用的效果 -->
		<setting name="multipleResultSetsEnabled" value="true" />
		<!-- 允许使用列标签代替列名 -->
		<setting name="useColumnLabel" value="true" />
		<!-- 数据库超过25000秒仍未响应则超时 -->
		<setting name="defaultStatementTimeout" value="25000" />
	</settings>

	<!-- 全局别名设置，在映射文件中只需写别名，而不必写出整个类路径 -->
	<typeAliases>
        <typeAlias type="com.rkt.domain.TMyrktUser" alias="tMyrktUser" />
        <typeAlias type="com.rkt.domain.base.TitanSequence" alias="titanSequence" />
	</typeAliases>

	<!-- 映射文件路径 -->
	<mappers>
        <mapper resource="sqlmap/TMyrktUser.xml"/>
        <mapper resource="sqlmap/TitanSequence.xml"/>
	</mappers>
</configuration>